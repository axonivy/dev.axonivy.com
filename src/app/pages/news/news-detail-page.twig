{% extends "_parts/base.twig" %}

{% block title %}News{{ parent() }}{% endblock %}

{% block content %}


<style>
h1 {
	color: #007095;
}

h2 {
	color: black;
	margin-bottom: 15px;
}

.image.fit {
	margin-bottom: 15px;
}

ul {
	margin-bottom: 15px;
}

p {
	margin-bottom: 15px;
}

.short-links {
	margin-top: 15px;
}

.galery {
	max-width: 200px;
	padding-right: 5px;
	float: left;
}

.collapsible {
	cursor: pointer;
	margin-bottom: 10px;
}

.collapsible-content {
	display: none;
	overflow: hidden;
	background-color: #f1f1f1;
	padding: 20px;
	margin-bottom: 10px;
}

.short-links {
	margin-bottom:15px;
}
.short-links > a {
	background-color: #007095;
	color: white;
	padding: 7px;
	margin-right: 4px;
	border-radius: 6px;
}

.inverse .short-links > a {
	background-color: white;
	color: #007095;
}

</style>

<link href="/assets/css/lightbox.min.css" rel="stylesheet" />
<script src="/assets/js/lightbox.min.js"></script>

<section id="one" style="background-color:#007095">
	<div class="inner-small" style="color: white;">
		<img src="{{ news.meta.logo }}" style="width:100px;position:relative;right:120px;top:120px;" />
		<h1 style="color:white;">{{ news.meta.title }}</h1>
		<p style="margin-bottom:0px;font-size:28px;font-weight:bold;color:#007095;color:white;">
			{{ news.meta.slogan }}<br />
		</p>
		<p>{{ news.meta.date }}</p>
	</div>
</section>

{% for newsDetailSection in news.newsDetailSections %}
	{% set inverseClass = '' %}
	{% if loop.index is divisible by(2) %}
        {% set inverseClass = 'inverse' %}
    {% endif %}
	<section id="one" class="{{ inverseClass }}">
		<div class="inner-small">
			{{ newsDetailSection.html|raw }}
			
			{% for image in newsDetailSection.images %}
				{% set galeryClass = '' %}
				{% if not loop.first %}
			        {% set galeryClass = 'galery' %}
			    {% endif %}
				<a href="{{ image }}" data-lightbox="cockpit">
  					<img class="image fit {{ galeryClass }}" src="{{ image }}" />
				</a>
			{% endfor %}

			<div style="clear:both;"></div>
		</div>
	</section>
{% endfor %}

<script>
	var coll = document.getElementsByClassName("collapsible");
	var i;

	for (i = 0; i < coll.length; i++) {
		coll[i].addEventListener("click", function() {
			this.classList.toggle("active");
			var content = this.nextElementSibling;
			if (content.style.display === "block") {
				content.style.display = "none";
			} else {
				content.style.display = "block";
			}
		});
	}
</script>

{% endblock %}
