{% extends "_parts/base.twig" %}

{% block title %}News{{ parent() }}{% endblock %}

{% block content %}

<style>
  .lts-marker {
    background-color: black;
    padding: 4px;
    color:white;
    padding-right: 10px;
    padding-left: 10px;
    border-radius: 5px;
  }

  .fixes {
    padding-right: 10px;
    padding-left: 10px;
    font-size: 20px;
    font-weight: 800;
    width: 210px;
  }
  p {
    line-height: 26px;
  }
  h3 {
    margin-bottom: 5px;
  }
  h5 {
    margin-bottom: 3px;
  }
  .button.fixed-margin {
    margin: 0 1em 0.5em 0;
  }
</style>

<section id="main">
  <div class="inner">
    <header>
      <h1>What's new</h1>
    </header>
    <p>
      We continuously release new versions of the Axon Ivy Platform.
      Here you can get an insight into the new features.
    </p>
  </div>
</section>

{% for new in news %}
  <section style="padding: 2em 0;">
    <div class="inner">
      {% set ltsMarker = 'display:none;' %}
      {% if new.meta.lts %}
        {% set ltsMarker = '' %}
      {% endif %}
      
      <h3>{{ new.meta.title }} 
        <span class="lts-marker" style="{{ ltsMarker }}">LTS</span>
        <span style="font-weight:80;"> | {{ new.meta.slogan }}</span>
      </h3>
      <p class="date-section">{{ new.meta.date }}</p>
      
      {{ new.abstract |raw }}
      
      <a href="{{ new.link }}" class="button special fixed-margin">
        <i class="si si-news"></i> Read more
      </a>
      
      <a href="{{ new.linkDoc }}" class="button fixed-margin">
        <i class="si si-book"></i> Documentation
      </a>
      <a href="{{ new.linkMigiNote }}" class="button fixed-margin">
        <i class="si si-update"></i> Migration Notes
      </a>
    </div>
  </section>
{% endfor %}

{% endblock %}
