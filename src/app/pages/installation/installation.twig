{% extends "_parts/base.twig" %}

{% block title %}Installation{{ parent() }}{% endblock %}

{% block content %}

<section id="main">
  <div class="inner-small">
    <header>
      <h1>{{ title }}</h1>
    </header>
  </div>
</section>

<section id="main" >
  <div class="inner-small" style="">
    {% if type == "docker" %}
      {% include 'installation/_docker.twig' %}
    {% elseif product == "engine" %}
      {% include 'installation/_engine.twig' %}
    {% else %}
      {% if isMac %}
        {% include 'installation/_mac_designer.twig' %}
      {% elseif isLinux %}
        {% include 'installation/_linux_designer.twig' %}
      {% else %}
        {% include 'installation/_designer.twig' %}
      {% endif %}
    {% endif %}
  </div>
</section>

{% if PRODUCTIVE_SYSTEM and startDownload %}
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      window.location.href = '{{ downloadUrl }}';
    });
  </script>
{% endif %}

{% endblock %}
