<style>
.download-card {
	border: 0px solid black;
	text-align: center;
	padding: 0 0 0 0.8em;
	margin-top: 10px;
	margin-bottom: 10px;
}
.download-link {
	padding: 10px 10px 10px 10px;
	width: 100%;
	line-height: 25px;
	height: 70px;
	font-size: 18px;
}
.download-description {
	font-size: 12px;
	font-weight: 500;
}
.download-icon {
	font-size: 14px;
}
</style>

<div class="row">
{% if artifacts is empty %}
	<b>This is currently not available. Come back soon!</b>
{% endif %}

{% for artifact in artifacts %}

    {% set column = 12 / artifacts|length %}

    <div class="{{ column }}u 12u$(xsmall) download-card">
    	<i class="{{ artifact.icon }}" style="font-size:65px;"></i>
    	<br /><br />
    	<a href="{{ artifact.url }}" title="{{ artifact.filename }}" class="button special download-link">
    		{{ artifact.name }}
    		<br />
    		<span class="download-description">{{ artifact.description }}</span>
    	</a>
    </div>

{% endfor %}
</div>

<br />

{% if artifacts is not empty %}
<div>
  <p style="float:left;"><i class="fas fa-link"></i> <a href="javascript:void(0);" onclick="javascript:showPermalinks();">Permalink</a></p>
  <p style="float:right;"><i class="fas fa-archive"></i> <a href="{{ archiveLink }}">other version and platforms</a></p>
</div>
<div style="clear: both;"></div>
 <ul class="permalinks" style="display:none;">
 	{% for artifact in artifacts %}
 		{% if artifact.permalink is not empty %}
 		<li><a class="permalink-link" href="{{ artifact.permalink }}">{{ artifact.permalink }}</a></li>
 		{% endif %}
 	{% endfor %}
  </ul>
{% endif %}

<script>
function showPermalinks() {
	var elements = document.getElementsByClassName('permalinks');
	for (var i = 0; i < elements.length; i++) {
		var element = elements[i];
		if (element.style.display == 'none') {
			element.style.display = 'block';
		} else {
			element.style.display = 'none';
		}
	}
}
</script>
