{% extends "_parts/base.twig" %}

{% block title %}Tutorial - Getting Started{{ parent() }}{% endblock %}

{% block content %}

<style>
	.timeline {
	  margin: 50px 0;
	  padding: 0;
	  border-top: 2px solid #428bca;
	  list-style: none;
	}

	.timeline li {
		float: left;
	  	padding-top: 30px;
	  	position: relative;
		width: 20%
	}
	.timeline li:first-of-type:before, .timeline li:last-of-type:before {
		content: "";
		width: 50%;
		height: 100%;
		background: #fff;
		position: absolute;
		top: -2px;
		left: 0;
	}
	.timeline li:last-of-type:before {
		left: 50%;
	}
	.timeline .title {
	  display: block;
	  width: 100%;
	  padding: 30px 0 0;
	  font-size: 12px;
	  text-align: center;
	  position: absolute;
	  top: 0;
	}
	.timeline .radio {
	  display: none;
	}
	.timeline .marker {
	  width: 50px;
	  height: 50px;
	  margin-left: -25px;
	  background: #fff;
	  border: 4px solid #428bca;
	  border-radius: 50%;
	  box-shadow: 0 0 0 10px #fff;
	  text-align: center;
	  line-height: 50px -10;
	  color: #428bca;
	  font-size: 26px;
	  font-style: normal;
	  position: absolute;
	  top: -26px;
	  left: 50%;
	}
	.current .marker {
	  color: #333;
	  border: 5px solid #C7D426;
	}
</style>

<section id="main">
	<div class="inner">
		<header>
			<h1>
				<span class="icon fas fa-graduation-cap"></span> Tutorial - {{ tutorial.name }}
			</h1>
		</header>

		<ol class="timeline">
			{% for step in tutorial.steps %}
			<li class="{{ currentStepNr == step.number ? 'current' }}">
				<input class="radio" type="radio">
				<span class="title"><strong>Step {{ step.number }}</strong><br>{{ step.name }}</span> 
				<a href="{{ step.url }}"><i class="marker">{{ step.number }}</i></a>
			</li>
			{% endfor %}
		</ol>
	</div>
</section>

<section id="main">
	<div class="inner">
		<div class="row">
			<div class="4u 12u$(xsmall)">
				<ol>
					{% for instruction in step.instructions %}
					<li>{{ instruction|raw }}</li>
					{% endfor %}
				</ol>
				{% if nextStepVideoUrl is not empty %}
				<ul class="actions">
					<li><a href="{{ nextStepVideoUrl }}" class="button special">Next</a></li>
				</ul>
				{% endif  %}
			</div>
			<div class="8u 12u$(xsmall)">
				<iframe height="540" width="720" src="{{ step.videoUrl }}"></iframe>
			</div>
		</div>
	</div>
</section>

{% endblock %}

